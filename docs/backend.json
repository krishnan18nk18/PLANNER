{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user profile was created."
        }
      },
      "required": ["uid", "email"]
    },
    "Task": {
      "title": "Task",
      "description": "Represents a single task item.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "dueDate": {
          "type": "string",
          "format": "date-time"
        },
        "priority": {
          "type": "string",
          "enum": ["Low", "Medium", "High"]
        },
        "completed": {
          "type": "boolean"
        }
      },
      "required": ["id", "title", "dueDate", "priority", "completed"]
    },
    "Planner": {
      "title": "Planner",
      "description": "Represents a user's planner configuration and data.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "daily", "weekly", "monthly", "annual", "goal", "productivity",
            "health", "meal", "budget", "academic", "work", "family",
            "bullet", "wedding", "travel"
          ]
        },
        "data": {
          "type": "object",
          "description": "JSON object holding the specific data for the planner type."
        }
      },
      "required": ["id", "type", "data"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/users/{userId}/tasks": {
      "schema": {
        "$ref": "#/entities/Task"
      },
      "description": "A subcollection storing all tasks for a specific user."
    },
    "/users/{userId}/planners": {
      "schema": {
        "$ref": "#/entities/Planner"
      },
      "description": "A subcollection storing all planner data for a specific user."
    }
  }
}
